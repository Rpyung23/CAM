<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <androidx.appcompat.widget.LinearLayoutCompat

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:src="@drawable/ic_time_primary_color"
            android:layout_width="@dimen/alto_ancho_image_top_details_eventos"
            android:layout_height="@dimen/alto_ancho_image_top_details_eventos">
        </ImageView>
        <TextView
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_events"
            android:textSize="@dimen/textsize_22sp"
            android:textColor="@color/black"
            >
        </TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="2dp"
        android:layout_height="wrap_content">
    </View>

    <androidx.appcompat.widget.LinearLayoutCompat

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:src="@drawable/ic_place_primary_color"
            android:layout_width="@dimen/alto_ancho_image_top_details_eventos"
            android:layout_height="@dimen/alto_ancho_image_top_details_eventos">
        </ImageView>
        <TextView
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dir_events"
            android:textSize="@dimen/textsize_22sp"
            android:textColor="@color/black"
            >
        </TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>