<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gris"
    tools:context=".views_socios.NotificationDetailsSocioActivity"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/id_view_toolbar_top"
        layout="@layout/toolbar_top"
        android:visibility="visible"
        >
    </include>

    <androidx.cardview.widget.CardView
        app:cardElevation="20dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_asturian_primary_color"
                    >
                </ImageView>
                <TextView
                    android:textSize="@dimen/textsize_22sp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Centro Asturiano de Mexico"
                    >
                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="@dimen/margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <TextView
                    android:layout_weight="0.5"
                    android:id="@+id/id_textview_tipo_noti"
                    android:textSize="@dimen/textsize_22sp"
                    android:textStyle="bold"

                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pago Aceptado"
                    >
                </TextView>
                <TextView
                    android:layout_weight="0.5"
                    android:id="@+id/id_textview_date_noti"
                    android:textSize="@dimen/textsize_17sp"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="22/05/2020"
                    >
                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/id_textview_body_noti"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loren_xxipsum"
                android:layout_marginBottom="10dp"
                >
            </TextView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>