<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@drawable/background_gradiente"
    tools:context=".view_recovery_pass.UpdatePasswordActivity"
android:gravity="center_horizontal">

    <ImageView
    android:layout_marginTop="?actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_main_logo"
    android:layout_marginBottom="20dp"
    >
</ImageView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="@dimen/margin_textinput_num_socio"
        android:layout_marginRight="@dimen/margin_textinput_num_socio"
        android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:startIconDrawable="@drawable/ic_lock_white"

        android:textColorHint="@color/white"
        app:boxBackgroundColor="#8c2E3286"
        app:startIconTint="@color/white"
        app:passwordToggleEnabled="true"
    android:hint="@string/new_pass"
    >
    <com.google.android.material.textfield.TextInputEditText

        android:id="@+id/id_textview_new_pass"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        >
    </com.google.android.material.textfield.TextInputEditText>
</com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="@dimen/margin_textinput_num_socio"
        android:layout_marginRight="@dimen/margin_textinput_num_socio"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_lock_white"
        android:textColorHint="@color/white"
        app:boxBackgroundColor="#8c2E3286"
        app:startIconTint="@color/white"
        android:hint="@string/repet_pass"
        app:passwordToggleEnabled="true"
        >
        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/id_textview_pass_repet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:singleLine="true"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/id_button_update_pass"
    android:layout_marginTop="@dimen/margin"
    android:layout_width="@dimen/ancho_recovery_button"
    android:layout_height="58dp"
    android:textColor="@color/purple_700"
    android:text="@string/update_pass"
    android:textSize="17sp"
    >
</androidx.appcompat.widget.AppCompatButton>


</androidx.appcompat.widget.LinearLayoutCompat>