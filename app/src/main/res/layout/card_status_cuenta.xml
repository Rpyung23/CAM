<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="1dp"
    android:layout_margin="@dimen/margin_15"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardCornerRadius="10dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/textsize_17sp"
            android:layout_marginLeft="@dimen/margin_left_card_profile_socio"
            android:layout_gravity="center_vertical"
            android:textColor="@color/ClubColorPrimary"
            android:drawableStart="@drawable/ic_state_account"
            android:text="  Estado de cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


        <TextView
            android:id="@+id/id_membresia_saldo"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textsize_17sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/ic_arrow_rigth"
            android:text="$0.00"
            android:textAlignment="textEnd"
            android:layout_marginRight="@dimen/margin_right_card_profile_socio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlCompat">
        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>