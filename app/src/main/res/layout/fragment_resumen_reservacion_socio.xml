<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.fragment_reservas_socio.ResumenReservacionSocioFragment"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="Resumen de la reservación"
                android:textSize="@dimen/textsize_22sp"
                android:textColor="@color/ClubColorPrimary"
                android:layout_gravity="center_horizontal"
                >
            </TextView>


            <TextView
                android:layout_marginTop="@dimen/textsize_22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="Datos de la habitación"
                android:textSize="@dimen/textsize_22sp"
                android:textColor="@color/ColorIconFechas"
                >
            </TextView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_prmary_fondo"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_15"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/margin_10"
                    >

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineTop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.05"
                        >
                    </androidx.constraintlayout.widget.Guideline>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineRight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.02"
                        >
                    </androidx.constraintlayout.widget.Guideline>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineLeft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.97"
                        >
                    </androidx.constraintlayout.widget.Guideline>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineBottom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.95"
                        >
                    </androidx.constraintlayout.widget.Guideline>


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineCenter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"
                        >
                    </androidx.constraintlayout.widget.Guideline>


                    <TextView
                        android:id="@+id/lblPersonExtra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Persona extra : "
                        app:layout_constraintTop_toTopOf="@+id/GuideLineTop"
                        app:layout_constraintStart_toStartOf="@+id/GuideLineRight"
                        app:layout_constraintEnd_toEndOf="@+id/GuideLineCenter"
                        android:textSize="@dimen/textsize_17sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:textColor="@color/ColorIconFechas"
                        >
                    </TextView>


                    <TextView
                        android:id="@+id/txtNumHabitaExtra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:gravity="end"
                        app:layout_constraintTop_toTopOf="@+id/lblPersonExtra"
                        app:layout_constraintStart_toStartOf="@+id/GuideLineCenter"
                        app:layout_constraintBottom_toBottomOf="@+id/lblPersonExtra"
                        app:layout_constraintEnd_toEndOf="@+id/GuideLineLeft"
                        android:textSize="@dimen/textsize_20sp"
                        android:fontFamily="@font/roboto_black"
                        android:textColor="@color/ColorIconFechas"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/lblNumPersonExtra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15"
                        android:text="Tipo de habitación : "
                        app:layout_constraintEnd_toEndOf="@+id/GuideLineCenter"
                        app:layout_constraintTop_toBottomOf="@+id/lblPersonExtra"
                        app:layout_constraintStart_toStartOf="@+id/GuideLineRight"
                        android:textColor="@color/ColorIconFechas"
                        android:textSize="@dimen/textsize_17sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        >
                    </TextView>



                    <TextView
                        android:id="@+id/txtNumPersonExtra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Habitación con terraza"
                        android:gravity="end"
                        app:layout_constraintTop_toTopOf="@+id/lblNumPersonExtra"
                        app:layout_constraintStart_toStartOf="@+id/GuideLineCenter"
                        app:layout_constraintBottom_toBottomOf="@+id/lblNumPersonExtra"
                        app:layout_constraintEnd_toEndOf="@+id/GuideLineLeft"
                        android:textSize="@dimen/textsize_20sp"
                        android:fontFamily="@font/roboto_black"
                        android:textColor="@color/ColorIconFechas"
                        >
                    </TextView>



                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="Datos de la reservacón"
                android:textSize="@dimen/textsize_22sp"
                android:textColor="@color/ColorIconFechas"
                android:layout_marginBottom="@dimen/textsize_22sp"
                >
            </TextView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_prmary_fondo"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_15"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/margin_10"
                    >

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineTopReserva"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.03"
                        >
                    </androidx.constraintlayout.widget.Guideline>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineRightReserva"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.02"
                        >
                    </androidx.constraintlayout.widget.Guideline>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineLeftReserva"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.97"
                        >
                    </androidx.constraintlayout.widget.Guideline>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineBottomReserva"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.97"
                        >
                    </androidx.constraintlayout.widget.Guideline>




                    <TextView
                        android:id="@+id/lblDesde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desde"
                        android:textSize="@dimen/textsize_17sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:textColor="@color/ColorIconFechas"
                        app:layout_constraintTop_toTopOf="@id/txtDesde"
                        app:layout_constraintStart_toStartOf="@id/GuideLineRightReserva"
                        app:layout_constraintBottom_toBottomOf="@+id/txtDesde"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/lblHasta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hasta:"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/textsize_17sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:textColor="@color/ColorIconFechas"

                        app:layout_constraintTop_toTopOf="@id/txtHasta"
                        app:layout_constraintStart_toStartOf="@id/GuideLineRightReserva"
                        app:layout_constraintBottom_toBottomOf="@+id/txtHasta"

                        >
                    </TextView>


                    <TextView
                        android:id="@+id/lblDias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Días:"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/textsize_17sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:textColor="@color/ColorIconFechas"

                        app:layout_constraintTop_toTopOf="@id/txtDias"
                        app:layout_constraintStart_toStartOf="@id/GuideLineRightReserva"
                        app:layout_constraintBottom_toBottomOf="@+id/txtDias"



                        >
                    </TextView>


                    <TextView
                        android:id="@+id/lblNumNoche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Número de noches:"
                        android:textSize="@dimen/textsize_17sp"
                        android:layout_marginTop="@dimen/margin_15"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:textColor="@color/ColorIconFechas"
                        app:layout_constraintTop_toTopOf="@id/txtNumNoches"
                        app:layout_constraintStart_toStartOf="@id/GuideLineRightReserva"
                        app:layout_constraintBottom_toBottomOf="@+id/txtNumNoches"

                        >
                    </TextView>

                    <TextView
                        android:id="@+id/lblPriceHabita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio de habitación x noche:"
                        android:textSize="@dimen/textsize_17sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textStyle="bold"
                        android:textColor="@color/ColorIconFechas"


                        app:layout_constraintTop_toTopOf="@id/txtPriceNoche"
                        app:layout_constraintStart_toStartOf="@id/GuideLineRightReserva"
                        app:layout_constraintBottom_toBottomOf="@+id/txtPriceNoche"


                        >
                    </TextView>

                    <TextView
                        android:id="@+id/lblSubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal:"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/textsize_17sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textStyle="bold"
                        android:textColor="@color/ColorIconFechas"
                        app:layout_constraintTop_toTopOf="@id/txtSubTotal"
                        app:layout_constraintStart_toStartOf="@id/GuideLineRightReserva"
                        app:layout_constraintBottom_toBottomOf="@+id/txtSubTotal"
                        >
                    </TextView>




                    <TextView
                        android:id="@+id/txtDesde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-10-01"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/textsize_20sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/ClubColorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@+id/GuideLineTopReserva"
                        app:layout_constraintEnd_toEndOf="@id/GuideLineLeftReserva"

                        >
                    </TextView>



                    <TextView
                        android:id="@+id/txtHasta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020-10-16"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/textsize_20sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/ClubColorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/txtDesde"
                        app:layout_constraintEnd_toEndOf="@id/GuideLineLeftReserva"

                        >
                    </TextView>



                    <TextView
                        android:id="@+id/txtDias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lunes a Jueves"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/textsize_20sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/ClubColorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/txtHasta"
                        app:layout_constraintEnd_toEndOf="@id/GuideLineLeftReserva"

                        >
                    </TextView>



                    <TextView
                        android:id="@+id/txtNumNoches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/textsize_20sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/ClubColorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/txtDias"
                        app:layout_constraintEnd_toEndOf="@id/GuideLineLeftReserva"

                        >
                    </TextView>


                    <TextView
                        android:id="@+id/txtPriceNoche"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$910.00"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/textsize_20sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/ClubColorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/txtNumNoches"
                        app:layout_constraintEnd_toEndOf="@id/GuideLineLeftReserva"

                        >
                    </TextView>


                    <TextView
                        android:id="@+id/txtSubTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$2.730.00"
                        android:layout_marginTop="@dimen/margin_15"
                        android:textSize="@dimen/textsize_20sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/ClubColorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/txtPriceNoche"
                        app:layout_constraintEnd_toEndOf="@id/GuideLineLeftReserva"
                        >
                    </TextView>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/BtnEditReserva"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_width="0dp"
                        android:layout_height="?actionBarSize"
                        app:layout_constraintTop_toBottomOf="@+id/txtSubTotal"
                        app:layout_constraintEnd_toEndOf="@id/GuideLineLeftReserva"
                        app:layout_constraintStart_toStartOf="@id/GuideLineRightReserva"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/ClubColorPrimary"
                        android:text="@string/edit_reserva"
                        app:icon="@drawable/icon_content_edit"
                        android:textSize="@dimen/textsize_17sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textStyle="bold"
                        app:iconGravity="textStart"
                        >
                    </com.google.android.material.button.MaterialButton>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/BtnDeleteReserva"
                        android:layout_width="0dp"
                        android:layout_height="?actionBarSize"
                        app:layout_constraintTop_toBottomOf="@+id/BtnEditReserva"
                        app:layout_constraintEnd_toEndOf="@id/GuideLineLeftReserva"
                        app:layout_constraintStart_toStartOf="@id/GuideLineRightReserva"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/red"
                        android:text="@string/edit_reserva"
                        app:icon="@drawable/delete"
                        android:textSize="@dimen/textsize_17sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/red"
                        app:iconTint="@color/red"
                        app:iconSize="@dimen/textsize_22sp"
                        android:textStyle="bold"
                        app:iconGravity="textStart"
                        app:layout_constraintBottom_toTopOf="@id/GuideLineBottomReserva"
                        >
                    </com.google.android.material.button.MaterialButton>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                android:text="Datos de los extras :"
                android:textSize="@dimen/textsize_22sp"
                android:textColor="@color/ColorIconFechas"
                android:layout_marginBottom="@dimen/textsize_22sp"
                >
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/ClubColorPrimary"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="@dimen/textsize_22sp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/margin_10"
                    >

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineTopTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.05"
                        >
                    </androidx.constraintlayout.widget.Guideline>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineRightTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.02"
                        >
                    </androidx.constraintlayout.widget.Guideline>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineLeftTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.97"
                        >
                    </androidx.constraintlayout.widget.Guideline>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineBottomTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.95"
                        >
                    </androidx.constraintlayout.widget.Guideline>


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/GuideLineCenterTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"
                        >
                    </androidx.constraintlayout.widget.Guideline>


                    <TextView
                        android:id="@+id/lblTotalPagar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total a pagar"
                        app:layout_constraintTop_toTopOf="@+id/GuideLineTopTotal"
                        app:layout_constraintStart_toStartOf="@+id/GuideLineRightTotal"
                        app:layout_constraintEnd_toEndOf="@+id/GuideLineCenterTotal"
                        app:layout_constraintBottom_toTopOf="@+id/GuideLineBottomTotal"
                        android:textSize="@dimen/textsize_22sp"
                        android:fontFamily="@font/roboto_black"
                        android:textColor="@color/white"
                        >
                    </TextView>


                    <TextView
                        android:id="@+id/txtTotalPgar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="$3.500.00"
                        android:gravity="end"
                        app:layout_constraintTop_toTopOf="@+id/lblTotalPagar"
                        app:layout_constraintStart_toStartOf="@+id/GuideLineCenterTotal"
                        app:layout_constraintBottom_toBottomOf="@+id/lblTotalPagar"
                        app:layout_constraintEnd_toEndOf="@+id/GuideLineLeftTotal"
                        android:textSize="@dimen/textsize_22sp"
                        android:fontFamily="@font/roboto_black"
                        android:textColor="@color/white"
                        >
                    </TextView>




                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="@dimen/textsize_22sp"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:text="@string/btn_cancelar"
                app:icon="@drawable/close"
                app:iconSize="@dimen/textsize_22sp"
                android:textSize="@dimen/textsize_17sp"
                app:iconGravity="textStart"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/red"
                app:iconTint="@color/red"
                android:textColor="@color/red"
                >
            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="@dimen/textsize_22sp"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:text="@string/add"
                app:icon="@drawable/ic_baseline_save_24"
                app:iconSize="@dimen/textsize_22sp"
                android:textSize="@dimen/textsize_17sp"
                app:iconGravity="textStart"
                app:backgroundTint="@color/btn_add_invitado"
                >
            </com.google.android.material.button.MaterialButton>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>