<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gris"
    tools:context=".views_contacto.SedesDetailsActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/id_img_fondo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_wt">
            </ImageView>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fondo_black_20"
                >
            </View>

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="40dp"
                    android:paddingTop="30dp"
                    android:text="NÃºmero de contacto"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_17sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textnum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="5dp"
                    android:text="Contacto directo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_17sp"
                    android:textStyle="bold"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/margin_15"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/id_phone1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/margin"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawableTint="@color/ClubColorPrimary"
                            android:text="Llamar al Centro asturiano"
                            android:textColor="@color/ClubColorPrimary"
                            android:textSize="@dimen/textsize_17sp"></TextView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/margin"
                            android:drawableEnd="@drawable/ic_arrow_rigth"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat"></TextView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/id_textnum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="Contacto directo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_17sp"
                    android:textStyle="bold"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/margin_15"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/id_phone2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/margin"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawableTint="@color/ClubColorPrimary"
                            android:text="Llamar al Centro asturiano"
                            android:textColor="@color/ClubColorPrimary"
                            android:textSize="@dimen/textsize_17sp"></TextView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/margin"
                            android:drawableEnd="@drawable/ic_arrow_rigth"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat"></TextView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/id_textnum3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:text="Contacto directo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_17sp"
                    android:textStyle="bold"></TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/margin_15"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/id_phone3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/margin"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawableTint="@color/ClubColorPrimary"
                            android:text="Llamar al Centro asturiano"
                            android:textColor="@color/ClubColorPrimary"
                            android:textSize="@dimen/textsize_17sp"></TextView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/margin"
                            android:drawableEnd="@drawable/ic_arrow_rigth"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_17sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat"></TextView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/ClubColorPrimary"

        android:layout_gravity="center"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_15"
            >
            <TextView
                android:id="@+id/id_titulo"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_22sp"
                android:text="Club Campestre Ecologico"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/id_direcc"
                android:drawableLeft="@drawable/ic_location"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:text="  Carretera Federal Cuautla-Chalco-Mexico km 53"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <include
        layout="@layout/toolbar"
        >
    </include>

</FrameLayout>