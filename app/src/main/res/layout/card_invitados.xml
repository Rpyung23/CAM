<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCardViewInvitados"
    app:cardElevation="1dp"
    android:layout_margin="@dimen/margin_15"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#DDDCDC"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleInvitados"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/textsize_17sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_person_add"
            android:drawableTint="@color/black"
            android:text="  Invitados (Proximamente)"
            android:layout_marginLeft="@dimen/margin_left_card_profile_socio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
        </TextView>


        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/textsize_17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/ic_arrow_rigth"
            android:drawableTint="@color/black"
            android:layout_marginRight="@dimen/margin_right_card_profile_socio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/titleInvitados"
            app:layout_constraintBottom_toBottomOf="@+id/titleInvitados"
            app:layout_constraintEnd_toEndOf="parent"

            >
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>