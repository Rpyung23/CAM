<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/ClubColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarTop_alto_70dp"
        android:theme="@style/ToolbarColoredBackArrow"
        >
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbarTop_alto_70dp"
        app:srcCompat="@drawable/ic_mini_asturian_logo"
        >
    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/toolbarTop_alto_70dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/liear_round_bottom_black"
        android:backgroundTint="@color/black"
        >
        <TextView
            android:id="@+id/id_detalles_toolbar_top"
            android:textSize="@dimen/textsize_22sp"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/news_title"
            >
        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>