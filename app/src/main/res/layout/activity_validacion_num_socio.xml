<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradiente"
    tools:context=".views.view_recovery_pass.ValidacionNumSocioActivity"
    android:gravity="center_horizontal">
    <include
        layout="@layout/toolbar">
    </include>


    <ImageView
    android:layout_marginTop="?actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_main_logo"
    android:layout_marginBottom="20dp"
    >
</ImageView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="@dimen/margin_textinput_num_socio"
        android:layout_marginRight="@dimen/margin_textinput_num_socio"
        android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        app:boxCornerRadiusTopStart="7dp"
        app:boxCornerRadiusTopEnd="7dp"
    app:startIconDrawable="@drawable/ic_person_add"
        android:textColorHint="@color/white"
        app:boxBackgroundColor="#8c2E3286"
        android:fontFamily="@font/roboto_regular"
        app:startIconTint="@color/white"
    android:hint="@string/partner_number_copy"
    >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/id_textviewnumSocio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:singleLine="true"
        >
    </com.google.android.material.textfield.TextInputEditText>
</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/id_button_validar"
        android:layout_marginTop="@dimen/margin"
        android:layout_width="@dimen/ancho_recovery_button"
        android:layout_height="60dp"
        app:cornerRadius="7dp"
        app:backgroundTint="@color/white"
        android:textColor="@color/ClubColorPrimary"
        android:text="@string/recovery_pass_botton"
        android:fontFamily="@font/roboto_medium"
        android:textAllCaps="false"
        android:textSize="18sp"
    >

    </com.google.android.material.button.MaterialButton>


</androidx.appcompat.widget.LinearLayoutCompat>